<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key><string>com.musai.memagent.agent</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>-lc</string>
    <string>$HOME/redmine-n8n/mem-agent-mcp/bin/run_agent.sh</string>
  </array>

  <key>EnvironmentVariables</key>
  <dict>
    <key>HOME</key>
    <string>$HOME</string>
    <key>PATH</key>
    <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:/usr/sbin:/sbin:$HOME/.local/bin</string>

    <!-- Structured logging for agent -->
    <key>MEM_AGENT_LOG_EXTRACTS</key>
    <string>1</string>
    <key>MEM_AGENT_LOG_LEVEL</key>
    <string>INFO</string>
    <key>MEM_AGENT_VERBOSE_SDK</key>
    <string>0</string>
    <key>MEM_AGENT_SESSION_ID</key>
    <string>agent</string>
    <key>PYTHONUNBUFFERED</key>
    <string>1</string>
  </dict>

  <key>RunAtLoad</key><true/>
  <key>KeepAlive</key><true/>

  <key>StandardOutPath</key><string>$HOME/Library/Logs/memagent-agent.out</string>
  <key>StandardErrorPath</key><string>$HOME/Library/Logs/memagent-agent.err</string>
</dict>
</plist>
